/* pages/video/video.wxss */
.videoContainer .header {
  display: flex;
  padding: 10rpx;
}

.videoContainer .header image {
  width: 60rpx;
  height: 60rpx;
}

.videoContainer .header .search {
  border: 1rpx solid #eee;
  /*flex: flex-grow:0 flex-shrink:1 flex-basis:auto*/
  flex: 1;
  font-size: 20rpx;
  line-height: 60rpx;
  text-align: center;
  margin: 0 20rpx;
  color: #d43c33;
}

/*导航区域*/
.navScroll {
  display: flex;
  height: 65rpx;
  white-space: nowrap;
}

.navScroll .navItem {
  padding: 0 30rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
  box-sizing: border-box;
}

.navScroll .navContent {

}

.navItem .active {
  border-bottom: 2rpx solid #d43c33;
}

/*视频列表*/
.videoScroll {
  margin-top: 10rpx;
  height: calc(100vh - 165rpx);
}

.videoItem {
  padding: 0 3%;
}

.videoItem video {
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}

.videoItem .common{
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}
/* footer */
.footer {
  border-top: 1rpx solid #eee;
  padding: 20rpx 5rpx;
}
.footer .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.footer  .nickName {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.footer .comments_praised {
  float: right;
}

.comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}

.comments_praised .btn:after {
  border: none;
}

.comments_praised .item {
  margin-left: 50rpx;
  position: relative;
}

.comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}