.searchContainer {
  /*display: flex;*/
  padding: 0 20rpx;
}

.searchContainer .header {
  display: flex;
  height: 60rpx;
  padding: 10rpx 0;
  line-height: 60rpx;
}

.searchInput {
  position: relative;
  flex: 1;
  border-radius: 30rpx;
  background: rgba(237, 237, 237, 0.8);
}

.searchInput .searchIcon {
  position: absolute;
  left: 15rpx;
  top: 0;
}

.searchInput input {
  margin-left: 50rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.placeholder {
  color: rebeccapurple;
  font-size: 25rpx;
}

.header .cancel {
  text-align: center;
  width: 100rpx;
}
.header .clear{
  z-index: 5;
  width: 30rpx;
  position: absolute;
  right: 30rpx;
  top: 0;
}

/*热搜榜*/
.hotContainer .tittle {
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #eae6e6;
}

.hotList {
  display: flex;
  flex-wrap: wrap;
}

.hotItem {
  width: 50%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  /*margin: 10rpx;*/
  /*border-radius: 40rpx;*/
  /*background-color: #efefef;*/
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
}

.hotItem .order {
  margin: 0 10rpx;
}

.hotItem .strong {
  font-weight: 600;
  color: #d43c33;
}

.hotItem .weak {
  opacity: 0.6;
}

.iconImg {
  width: 35rpx;
  height: 20rpx;
  margin-left: 10rpx;
}

/*搜索内容展示*/
.searchContent {
  /*color: #bcbcbc;*/
  /*height: 80rpx;*/
  /*line-height: 80rpx;*/
  /*font-size: 24rpx;*/
}

.searchTittle {

}

.searchItem {
  /*width: 100%;*/
  color: #bcbcbc;
  line-height: 80rpx;
  font-size: 24rpx;
  display: flex;
}

.searchItem .content {
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-left: 20rpx;
  border-bottom: 1rpx solid #f1f1f1;
}

/*搜索历史*/
.history {
  position: relative;
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx 0;
  line-height: 50rpx;
}

.history .tittle{
  font-size: 28rpx;
}

.history .historyItem{
  font-size: 26rpx;
  background-color: #f0f0f0;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  border-radius: 20rpx;
  padding: 0 30rpx;
}
.history .delete{
  position: absolute;
  bottom: 10rpx;
  right: 15rpx;
  font-size: 36rpx;
}